<%
  column_display_names = table[:column_display_names]
  column_display_names ||= table[:model].column_display_names
  has_actions = table[:has_actions] ? true:false
%>
<script type="text/javascript">
  jQuery(function(){
    var form = $('#alarm-form');
    $(".devices_control input[name=delete]").click(function(){
       if(confirm("确认删除选中数据？"))
       form.submit();
    });

  });
</script>
<%  form_for( :ids, :url => {:controller=>"report/alarm_templates",:action =>'destroy'}, :html => {:id => "alarm-form", :method=>:delete}) do%>
<table id="table_<%=ActionController::RecordIdentifier.singular_class_name(table[:model])%>" cellpadding="0" cellspacing="0" class="ui-grid">
  <thead>
     <div style="font-size:12px;"  class="devices_control control clearfix">
       <%=link_button_to "新建" ,{:action=>'new'}%>
       <%=tag('input',:type =>'button',:value =>'删除',:name => 'delete' )%>
    </div>
    <tr>
      <%= render :partial => 'thead',:locals=>{:style=>'t',:model=>table[:model],:column_display_names=>column_display_names,:has_actions=>has_actions } %>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'table_li', :collection => table[:data], :locals => {:column_display_names=>column_display_names,:has_actions=>has_actions } %>
  </tbody>
  
</table>
<%end%>